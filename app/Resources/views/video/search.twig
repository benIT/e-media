{% extends 'base.html.twig' %}
{% trans_default_domain "video" %}
{% block body %}
    <h2>{% trans %}search.title{% endtrans %}</h2>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(form.tags) }}
        {{ form_widget(form.tags, {'attr': {'class': 'form-control chosen-select'}}) }}
        {{ form_errors(form.tags) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <input type="submit" value="{% trans %}search.button{% endtrans %}"/>
    {{ form_end(form) }}

    {% if submitted %}
        {% if videos %}
            {{ utils.video_list(videos) }}
        {% else %}
            no video
        {% endif %}
    {% endif %}
    <a class="" href="{{ path('video_index') }}">{% trans from "common" %}back{% endtrans %}</a>
{% endblock %}