                <li role="presentation"><a href="#">Contact</a></li>
            </ul>
        </nav>
        <h3 class="text-muted">{{ app_title }}</h3>
    </div>
    {% block body %}{% endblock %}
    <footer class="footer">
        <p>&copy; 2017 ben.IT. <a href="https://github.com/benIT/sf3-video-app">source code on github</a></p>
